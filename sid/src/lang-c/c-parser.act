	<skip-to-end-of-tuple-defn> = @{
		while (@. != @$EOF
			&& @. != @$DEFINE
			&& @. != @$CODE
			&& @. != @$SEPARATOR
			&& @. != @$CLOSE-TUPLE
			&& @. != @$TERMINATOR
