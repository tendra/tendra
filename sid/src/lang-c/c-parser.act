			&& @. != @$BLT-TERMINALS
			&& @. != @$BLT-ACTIONS
			&& @. != @$BLT-TRAILER) {
			if (@. == @$SID-IDENTIFIER || @. == @$C-IDENTIFIER) {
				nstring_destroy(c_lexer_string_value(c_current_stream));
