@} ;

<exp_maxmin> : ( op, a, b ) -> ( e ) = @{
    @e = make_mult_exp ( @op, @a, @b ) ;
@} ;

<exp_minus> : ( a, b ) -> ( e ) = @{
    @e = make_minus_exp ( @a, @b ) ;
@} ;

<exp_mult> : ( a, b ) -> ( e ) = @{
    @e = make_mult_exp ( lex_star, @a, @b ) ;
@} ;

<exp_new> : ( b, p, t, n, d, i ) -> ( e ) = @{
    @e = make_new_exp ( @t, @n + @d, @b, @p, @i ) ;
@} ;

<exp_new_init> : ( t, p ) -> ( e ) = @{
