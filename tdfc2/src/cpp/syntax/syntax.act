@} ;

<stmt_try_func> : () -> ( e ) = @{
    @e = begin_try_stmt ( 1 ) ;
@} ;

<stmt_try_inject> : ( a ) -> () = @{
    inject_try_stmt ( @a ) ;
@} ;

<stmt_try_cont> : ( a, b ) -> ( e ) = @{
